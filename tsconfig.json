{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES6",
        "sourceMap": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "importHelpers": false,
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}